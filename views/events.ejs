    <script>
        function shareEventOnWhatsApp(eventName, eventLocation, eventDate, eventTimeFrom, eventTimeTo, eventimage,) {
            // Construct the message with text information and image URL
            var message = "Check out this event:\n" +
                "Name: " + eventName + "\n" +
                "Location: " + eventLocation + "\n" +
                "Date: " + eventDate + "\n" +
                "Time: " + eventTimeFrom + " to " + eventTimeTo + "\n\n" +
                "Image: " + eventimage + "\n\n" +
                "For more details, click here: " + window.location.href;

            // Encode message
            var encodedMessage = encodeURIComponent(message);

            // Construct WhatsApp sharing link
            var whatsappLink = "https://wa.me/?text=" + encodedMessage;

            // Open WhatsApp with the message prefilled
            window.open(whatsappLink);
        }
