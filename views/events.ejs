    <section>
        <div class="container">
            <div class="row">
                <% function truncateDescription(description, maxLength) { %>
                    <% var words = description.split(' '); %>
                    <% if (words.length > maxLength) { %>
                        <%= words.slice(0, maxLength).join(' ') + '...' %>
                    <% } else { %>
                        <%= description %>
                    <% } %>
                <% } %>
    
                <% if (events.length> 0 ) { %>
                    <% events.forEach((event)=> { %>
                        <div class="col-lg-4 col-md-6 my-3">
                            <div class="card border-0 shadow" style="max-width: 350px; margin:auto;">
                                <a href="/events/<%= event.id %>"><img src="/blood/<%= event.image %>" class="card-img-top"></a>
                                <div class="card-body">
                                    <div class="rating mb-3">
                                        <h4 style="margin-left: 80px;"><a href="/events/<%= event.id %>" style="color:rgb(239, 61, 52);"><%= event.name %></a></h4>
                                        <p class="mb-1 m-3"><%= truncateDescription(event.description, 30) %></p>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No events found.</p>
                <% } %>
            </div>
        </div>
    </section>
    
