    <!-- Register Modal -->
     <div class="modal fade" id="RegisterModel" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="Register-form" action="/" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title">
                            <i class="bi bi-person-fill-add fs-3 me-2"></i>User Registration
                        </h5>
                        <button type="reset" class="btn-close shadow-non" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                         <!-- Add your registration form fields here  -->
                        <div class="mb-3">
                            <label class="form-label">Full Name</label>
                            <input name="name" type="text" class="form-control shadow-none" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">BLOOD GROUP</label>
                            <select id="group" name="group">
                                <option value="A+">A+</option>
                                <option value="A-">A-</option>
                                <option value="B+">B+</option>
                                <option value="B-">B-</option>
                                <option value="AB+">AB+</option>
                                <option value="AB-">AB-</option>
                                <option value="O+">O+</option>
                                <option value="O-">O-</option>
                            </select> 
                        </div>
    
                        <div class="mb-3">
                            <label class="form-label">MOBILE NO.</label>
                            <input name="number" type="number" class="form-control shadow-none" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label"> ADDRESS</label>
                            <input name="name" type="name" class="form-control shadow-none" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label"> CITY</label>
                            <input name="name" type="name" class="form-control shadow-none" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label"> PINCODE</label>
                            <input name="name" type="name" class="form-control shadow-none" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label"> STATE</label>
                            <input name="name" type="name" class="form-control shadow-none" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label"> PASSWORD</label>
                            <input name="password" type="password" class="form-control shadow-none" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
     
    <!-- login Modal -->
    

    <section class="our-room">
        <div class="container">
            <div class="row">
                <h2 class="fw-bold h-font text-center" style="margin-top: 27px;color:rgb(239, 61, 52);"><U> DONOR</U></h2>
            </div>
        </div>
    </section>

    
    <table id="example" class="display">
        <thead>
            <tr>
                <th>NAME</th>
                <th>BLOOD GROUP</th>
                <th>MOBILE NO.</th>
                <th>ADDRESS</th>
                <th>CITY</th>
                <th>STATE</th>
                <th>CONTACT</th>
            </tr>
        </thead>
        <tbody>
            <% x.forEach((y) => { %>
                <tr>
                    <td><%= y.name %></td>
                    <td><%= y.group %></td>
                    <td><%= y.number %></td>
                    <td><%= y.address %></td>
                    <td><%= y.city %></td>
                    <td><%= y.state %></td>
                    <td>
                        <!-- Add buttons for contact actions -->
                        <a href="tel:<%= encodeURIComponent(y.number) %>">
                            <button class="btn btn-danger">CALL</button>
                        </a>
                        <a href="https://api.whatsapp.com/send?phone=<%= encodeURIComponent(y.number) %>" target="_blank">
                            <button class="btn btn-success">WhatsApp</button>
                        </a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

