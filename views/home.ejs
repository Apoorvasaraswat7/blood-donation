        <main>
            <!-- Event Cards -->
            <section class="events">
                <div class="container">
                    <div class="row">
                        <% function truncateDescription(description, maxLength) { %>
                            <% var words = description.split(' '); %>
                            <% if (words.length > maxLength) { %>
                                <%= words.slice(0, maxLength).join(' ') + '...' %>
                            <% } else { %>
                                <%= description %>
                            <% } %>
                        <% } %>
                        <% for (let i = 0; i < Math.min(eventshome.length, 3); i++) { %>
                            <div class="col-lg-4 col-md-6 my-3">
                                <div class="card border-0 shadow" style="max-width: 350px; margin:auto;">
                                    <a href="/events/<%= eventshome.id %>""><img src="/blood/<%= eventshome[i].image %>" class="card-img-top"></a>
                                    <div class="card-body">
                                        <h4 style="margin-left: 80px;"><a href="/events/<%=eventshome.id %>" style="color: rgb(239, 61, 52);text-decoration: none; "><%= eventshome[i].name %></a></h4>
                                        <p><%= truncateDescription(eventshome[i].description, 30) %></p>
                                        <!-- Add more event details if needed -->
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
            </section>
        </main>
    
  
